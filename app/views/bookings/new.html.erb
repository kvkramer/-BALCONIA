<div class="page-container" style="background-color: white;">
  

    <div class="edit-banner">
      book a sphere
    </div>

    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12" style="margin-top: 10px;">
          <!--     <p>Price per day: @sphere.price %></p> -->

          <%= simple_form_for ([ @sphere, @booking ]) do |f| %>
          <%= f.input :date %>
          <%= f.input :starttime %>
          <%= f.input :endtime %>
          <br>
          <%= f.submit "instant booking", class: "btn-yellow", style: "padding: 8px 7px" %>
          <% end %>
        </div>
      </div>
    </div>
</div>