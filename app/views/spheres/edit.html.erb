<div class="container mt-4">
  <div class="row">
    <div class="col-12 m-auto">

        <div class="edit-banner" style="background-color: $yellow, linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
  Edit your sphere's details
</div>

    <div id="edit-form">
          <div class="mt-3">
                        <div class="row">
                        <div class="col-12">
                              <%= form_for(@sphere) do |f| %>
                                  <div class="form-group">
                                    <%= f.label :title, class: "lowercase" %>
                                    <%= f.text_field :title, class: 'form-control' %>
                                  </div>
                                  <div class="form-group">
                                    <%= f.label :description, class: "lowercase" %>
                                    <%= f.text_field :description, class: 'form-control' %>
                                  </div>
                                  <div class="form-group">
                                    <%= f.label :address, class: "lowercase" %>
                                    <%= f.text_area :address, class: 'form-control' %>
                                  </div>
                                    <div class="form-group">
                                    <%= f.label :price, class: "lowercase" %>
                                    <%= f.number_field :price, class: 'form-control' %>
                                  </div>

                                 <div class="form-group">
                                    <%= f.label :photo, class: "lowercase" %>
                                    <%= f.file_field :photo, class: 'form-control' %>
                                  </div>
                              
                                  <div class="form-group">
                                    <label for="formControlRange">distance from me</label>
                                    <input type="range" class="form-control-range" id="formControlRange">
                                  </div>

                              <div class="form-check">
                                    <%= f.check_box :balcony, class:"form-check-input", placeholder: ' Playful and energetic...' %>
                                    <%= f.label :balcony, class: "lowercase form-check-label" %>
                                  </div>

                                  <div class="form-check">
                                    <%= f.check_box :garden, class:"form-check-input", placeholder: ' Playful and energetic...' %>
                                    <%= f.label :garden, class: "lowercase form-check-label" %>
                                  </div>

                                  <div class="form-check">
                                    <%= f.check_box :terrace, class:"form-check-input", placeholder: ' Playful and energetic...' %>
                                    <%= f.label :terrace, class: "lowercase form-check-label" %>
                                  </div>
                                 
                                  <div class="form-check">
                                    <%= f.check_box :sunny, class:"form-check-input", placeholder: ' Playful and energetic...' %>
                                    <%= f.label :sunny, class: "lowercase form-check-label" %>
                                  </div>
                              <div class="form-check">
                                    <%= f.check_box :highspeed_wifi, class:"form-check-input", placeholder: ' Playful and energetic...' %>
                                    <%= f.label :highspeed_wifi, class: "lowercase form-check-label" %>
                                  </div>

                                  <div class="form-check">
                                    <%= f.check_box :plants, class:"form-check-input", placeholder: ' Playful and energetic...' %>
                                    <%= f.label :plants, class: "lowercase form-check-label" %>
                                  </div>
                          
                               <div class="form-check">
                                    <%= f.check_box :quiet, class:"form-check-input", placeholder: ' Playful and energetic...' %>
                                    <%= f.label :quiet, class: "lowercase form-check-label" %>
                                  </div>
                                  
                                  <div class="form-check">
                                    <%= f.check_box :spacious_desk, class:"form-check-input", placeholder: ' Playful and energetic...' %>
                                    <%= f.label :spacious_desk, class: "lowercase form-check-label" %>
                                  </div>

                                  <div class="form-check">
                                    <%= f.check_box :barbecue, class:"form-check-input", placeholder: ' Playful and energetic...' %>
                                    <%= f.label :barbecue, class: "lowercase form-check-label" %>
                                  </div>
                                
                                  <div class="form-check">
                                    <%= f.check_box :cozy, class:"form-check-input", placeholder: ' Playful and energetic...' %>
                                    <%= f.label :cozy, class: "lowercase form-check-label" %>
                                  </div>

                                  <div class="form-check">
                                    <%= f.check_box :pet_friendly, class:"form-check-input", placeholder: ' Playful and energetic...' %>
                                    <%= f.label :pet_friendly, class: "lowercase form-check-label" %>
                                  </div>

                                  <div class="mt-3">
                                    <%= f.submit "Edit", class: 'btn-yellow' %>
                                    <%= link_to 'Cancel', '#', class: 'btn btn-light' %>
                                  </div>
                              <% end %>
                              </div>
                             
                        </div>
                </div>
            </div>
        
      </div>
    </div>
  </div>
  <br>

