<div class="container mt-4">
  <div class="row">
    <div class="col-12 m-auto">

        <div class="edit-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1584346133934-a3afd2a33c4c?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60)">
  Edit your sphere's details
</div>

    <div id="edit-form">
          <div class="mt-3">
                        <div class="row">
                        <div class="col-12">
                              <%= form_for(@sphere) do |f| %>
                                  <div class="form-group">
                                    <%= f.label :title %>
                                    <%= f.text_field :title, class: 'form-control' %>
                                  </div>
                                  <div class="form-group">
                                    <%= f.label :description %>
                                    <%= f.text_field :description, class: 'form-control' %>
                                  </div>
                                  <div class="form-group">
                                    <%= f.label :address %>
                                    <%= f.text_area :address, class: 'form-control' %>
                                  </div>
                                    <div class="form-group">
                                    <%= f.label :price %>
                                    <%= f.number_field :price, class: 'form-control' %>
                                  </div>

                                 <div class="form-group">
                                    <%= f.label :photo %>
                                    <%= f.file_field :photo, class: 'form-control' %>
                                  </div>
                              
                                  <div class="form-group">
                                    <label for="formControlRange">Example Range input</label>
                                    <input type="range" class="form-control-range" id="formControlRange">
                                  </div>
                              <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                <label class="form-check-label" for="defaultCheck1">
                                  balcony
                                </label>
                              </div>
                              <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                <label class="form-check-label" for="defaultCheck1">
                                  garden
                                </label>
                              </div>
                              <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                <label class="form-check-label" for="defaultCheck1">
                                  terrace
                                </label>
                              </div>
                              <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                <label class="form-check-label" for="defaultCheck1">
                                  bbq
                                </label>
                              </div>
                              <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                <label class="form-check-label" for="defaultCheck1">
                                  lots of flowers and plants
                                </label>
                              </div>
                              <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                <label class="form-check-label" for="defaultCheck1">
                                  animals
                                </label>
                              </div>
                               <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                <label class="form-check-label" for="defaultCheck1">
                                  pool
                                </label>
                              </div>

                                  <div class="mt-3">
                                    <%= f.submit "Edit", class: 'btn-yellow' %>
                                    <%= link_to 'Cancel', '#', class: 'btn btn-light' %>
                                  </div>
                              <% end %>
                              </div>
                             
                        </div>
                </div>
            </div>
        
      </div>
    </div>
  </div>
  <br>

