<div class="page-container">
  <h1> Which of these lovely spheres will become your friend for a day? </h1>

  <%= form_tag spheres_path, method: :get do %>
  <%= select_tag(:price, options_for_select(["below 20", "below 10", "free"], selected: params[:price]), :include_blank => "Price") %>
  <%= submit_tag "Filter!", class: "btn btn-flat" %>
  <% end %>

  <div class="row">
    <div class="col-6">
      <% @spheres.each do |sphere| %>
      <div class="card-sphere">

        <% if sphere.photo.attached? %>
        <%= cl_image_tag sphere.photo.key, crop: :fill %>
        <% else %>
        <%= image_tag "spheres/#{rand(1..12)}.jpg" %>
        <% end %>

        <div class="card-sphere-infos">
          <%= link_to sphere.name, sphere_path(sphere) %>
          <p>Living in <%= sphere.address %></p>
          <p>Cost per day: <%= sphere.price %>â‚¬</p>
        </div>
      </div>
      <% end %>
    </div>


    <div class="col-4">

      <div id="map"
      style="width: 100%; height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
</div>
