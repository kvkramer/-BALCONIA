<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">

    <div id="edit-form">
        <div class="sphere-form">
          <h1 id="header-yellow">Add your sphere's details</h1>
          <div class="mt-3">
                        <div class="row">
                        <div class="col-8">
                              <%= form_for(@sphere) do |f| %>
                                  <div class="form-group">
                                    <%= f.label :title %>
                                    <%= f.text_field :title, class: 'form-control', placeholder: ' Playful and energetic...' %>
                                  </div>
                                  <div class="form-group">
                                    <%= f.label :description %>
                                    <%= f.text_field :description, class: 'form-control', placeholder: ' Playful and energetic...' %>
                                  </div>
                                  <div class="form-group">
                                    <%= f.label :address %>
                                    <%= f.text_area :address, class: 'form-control', placeholder: ' Isle of sphere, 1 pet road...' %>
                                  </div>
                                    <div class="form-group">
                                    <%= f.label :price %>
                                    <%= f.number_field :price, class: 'form-control', placeholder: 0 %>
                                  </div>
                                  <div class="form-group">
                                    <%= f.label :photo %>
                                    <%= f.file_field :photo, class: 'form-control' %>
                                  </div>
                            <!--       <div class="form-group">
                                    <%= f.label :barbecue %>
                                    <%= f.radio_button :barbecue, false , :checked => true , :value => false, class: 'form-control' %>
                                  </div> -->
                                  <div class="mt-3">
                                    <%= f.submit "Add", class: 'btn-yellow' %>
                                    <%= link_to 'Cancel', spheres_path, class: 'btn btn-light' %>
                                  </div>
                              <% end %>
                              </div>
                              <div class="col-4 placing-avatar">
                                <img class="avatar-large" alt="avatar" src="https://images.unsplash.com/photo-1529776180807-ea0ee08c8315?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" />
                              </div>
                        </div>
                </div>
            </div>

        </div>
      </div>
    </div>
  </div>
  <br>
