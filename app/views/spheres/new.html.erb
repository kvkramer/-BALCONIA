<div class="container mt-4">
  <div class="row">
    <div class="col-12 m-auto">

    <div id="edit-form">
        <div class="sphere-form">
          <h1 id="header-yellow">Add your sphere's details</h1>
          <div class="mt-3">
                        <div class="row">
                        <div class="col-12">
                              <%= form_for(@sphere) do |f| %>
                                  <div class="form-group">

                                    <%= f.label :title %>
                                    <%= f.text_field :title, class: 'form-control', placeholder: ' Playful and energetic...' %>
                                  </div>
                                  <div class="form-group">

                                    <%= f.label :description %>
                                    <%= f.text_field :description, class: 'form-control', placeholder: ' Playful and energetic...' %>
                                  </div>
                                  <div class="form-group">
                                    <%= f.label :address %>
                                    <%= f.text_area :address, class: 'form-control', placeholder: ' Isle of sphere, 1 pet road...' %>
                                  </div>
                                    <div class="form-group">
                                    <%= f.label :price %>
                                    <%= f.number_field :price, class: 'form-control', placeholder: 0 %>
                                  </div>
                                  <div class="form-group">
                                    <%= f.label :photo %>
                                    <%= f.file_field :photo, class: 'form-control' %>
                                  </div>
                              
                                  <div class="form-group">
                                    <label for="formControlRange">Example Range input</label>
                                    <input type="range" class="form-control-range" id="formControlRange">
                                  </div>
                              <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                <label class="form-check-label" for="defaultCheck1">
                                  balcony
                                </label>
                              </div>
                              <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                <label class="form-check-label" for="defaultCheck1">
                                  garden
                                </label>
                              </div>
                              <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                <label class="form-check-label" for="defaultCheck1">
                                  terrace
                                </label>
                              </div>
                              <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                <label class="form-check-label" for="defaultCheck1">
                                  bbq
                                </label>
                              </div>
                              <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                <label class="form-check-label" for="defaultCheck1">
                                  lots of flowers and plants
                                </label>
                              </div>
                              <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                <label class="form-check-label" for="defaultCheck1">
                                  animals
                                </label>
                              </div>
                               <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                <label class="form-check-label" for="defaultCheck1">
                                  pool
                                </label>
                              </div>
                                  <div class="mt-3">
                                    <%= f.submit "Add", class: 'btn-yellow' %>
                                    <%= link_to 'Cancel', spheres_path, class: 'btn btn-light' %>
                                  </div>
                              <% end %>
                              </div>
                        </div>
                </div>
            </div>

        </div>
      </div>
    </div>
  </div>
  <br>
