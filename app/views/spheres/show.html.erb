<div class="container mt-4">
  <div class="row">
    <div class="col-12 m-auto">
        <div class="edit-banner">
          welcome to <%= @sphere.title %>
        </div>
        <br>
        <div class="card-sphere-show">
          <% if @sphere.photo.attached? %>
            <%= cl_image_tag @sphere.photo.key, crop: :fill %>
          <% else %>
            <%= image_tag "spheres/#{rand(1..6)}.jpg" %>
          <% end %>

          <div class="card-sphere-show-infos">
            <div>
              <p> address: <%= @sphere.address.downcase  %></p>
              <p> description: <%= @sphere.description %></p>
              <p> contact host: <%= @sphere.user.email %></p>
              <p> read reviews: </p>
              <p class="card-sphere-show-pricing"> cost per hour: <%= @sphere.price %>â‚¬</p>
            </div>
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-sphere-user avatar-bordered" />
          </div>
        </div>

        <div class="flex-container">
          <button class="btn btn-outline-secondary flex-item"><%= link_to "redo search",  spheres_path %></button>
          <button class="btn btn-outline-secondary flex-item"><%= link_to "book",  new_sphere_booking_path(@sphere) %></button>
          <% if policy(@sphere).edit? %>
            <button class="btn btn-outline-secondary flex-item"><%= link_to "edit",  edit_sphere_path %></button>
          <% end %>
          <% if policy(@sphere).destroy? %>
            <button class="btn btn-outline-secondary flex-item"><%= link_to "delete", sphere_path(@sphere), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }%></button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
