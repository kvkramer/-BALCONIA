<div class="container mt-4">
  <div class="row">
    <div class="col-12 m-auto">

        <div class="card-sphere-show">
          <% if @sphere.photo.attached? %>
            <%= cl_image_tag @sphere.photo.key, crop: :fill %>
          <% else %>
            <%= image_tag "spheres/#{rand(1..6)}.jpg" %>
          <% end %>

          <div class="card-sphere-show-infos">
            <div>
              <h1 id="showpage_title">Welcome to <%= @sphere.title %></h1>

              <p> address: <%= @sphere.address.downcase %></p>
              <p class="card-sphere-show-pricing"> cost per hour: <%= @sphere.price %>â‚¬</p>
              <p> <%= @sphere.description %></p>
              

              <% if @sphere.balcony %>
              <p> balcony </p>
              <% end %>

              <% if @sphere.garden %>
              <p> garden </p>
              <% end %>

              <% if @sphere.terrace %>
              <p> terrace </p>
              <% end %>

               <% if @sphere.sunny %>
              <p> sunny </p>
              <% end %>

               <% if @sphere.highspeed_wifi %>
              <p> highspeed_wifi </p>
              <% end %>

               <% if @sphere.plants %>
              <p> plants </p>
              <% end %>
               <% if @sphere.quiet %>
              <p> quiet </p>
              <% end %>
               <% if @sphere.spacious_desk %>
              <p> spacious_desk </p>
              <% end %>
               <% if @sphere.barbecue %>
              <p> barbecue </p>
              <% end %>
               <% if @sphere.cozy %>
              <p> cozy </p>
              <% end %>
               <% if @sphere.pet_friendly %>
              <p> pet_friendly </p>
              <% end %>
              <br>
              <p> reviews </p>

            </div>

            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-sphere-user avatar-bordered" />
          </div>
        </div>
<br>
        <div class="flex-container">
          <% if @sphere.user==current_user%>
              <button class="btn-yellow flex-item"><%= link_to "edit",  edit_sphere_path %></button>
              <button class="btn-yellow flex-item"><%= link_to "delete", sphere_path(@sphere), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }%></button>
            <% else %>
              <button class="btn-yellow flex-item"><%= link_to "continue search",  spheres_path %></button>
              <button class="btn-yellow flex-item"><%= link_to "book",  new_sphere_booking_path(@sphere) %></button>
           <% end %>
          <br>
         

        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">Reviews</h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">Cras justo odio</li>
            <li class="list-group-item">Dapibus ac facilisis in</li>
            <li class="list-group-item">Vestibulum at eros</li>
          </ul>
          <div class="card-body">
            <a href="#" class="card-link">Card link</a>
            <a href="#" class="card-link">Another link</a>
          </div>
        </div>
          
  </div>
</div>


