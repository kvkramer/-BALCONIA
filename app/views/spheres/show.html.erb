<div class="container mt-4">
  <div class="row">
    <div class="col-12 m-auto">

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
          <div class="carousel-inner">
            <% if @sphere.photos.attached? %>
              <% @sphere.photos.each_with_index do |photo, index| %>
                <div class="carousel-item <%='active' if index == 0 %>">
                  <%= cl_image_tag photo.key, height: 250, width: 400, crop: :fill, class: "d-block w-100", alt: "pictures of the apartment" %>
                </div>
              <% end %>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>



        <div class="card-sphere-show">
          <div class="card-sphere-show-infos">
            <div>
              <h1 id="showpage_title">Welcome to your <%= @sphere.title %></h1>
              <br>
              <p> <i class="fas fa-map-marker-alt"></i>  <%= @sphere.address %></p>
              <p> <i class="far fa-comment"></i>  <%= @sphere.description %></p>

              <p id="showpage_price"> <i class="fas fa-euro-sign"></i>  <%= @sphere.cost_per_day %>â‚¬</p>
              <br>

              <div>
                <% if @sphere.balcony %>
                <p> balcony </p>
                <% end %>

                <% if @sphere.garden %>
                <p> garden </p>
                <% end %>

                <% if @sphere.terrace %>
                <p> terrace </p>
                <% end %>

                <% if @sphere.sunny %>
                <p> sunny </p>
                <% end %>

                <% if @sphere.highspeed_wifi %>
                <p> highspeed_wifi </p>
                <% end %>

                <% if @sphere.plants %>
                <p> plants </p>
                <% end %>
                <% if @sphere.quiet %>
                <p> quiet </p>
                <% end %>
                <% if @sphere.spacious_desk %>
                <p> spacious_desk </p>
                <% end %>
                <% if @sphere.barbecue %>
                <p> barbecue </p>
                <% end %>
                <% if @sphere.cozy %>
                <p> cozy </p>
                <% end %>
                <% if @sphere.pet_friendly %>
                <p> pet_friendly </p>
                <% end %>
              </div>
              <br>
                <% if policy(@sphere).edit? %>
                  <%= link_to "edit",  edit_sphere_path,  class: "btn-yellow flex-item" %>
                <% end %>
                <% if policy(@sphere).destroy? %>
                <%= link_to "delete", sphere_path(@sphere), class: "btn-yellow flex-item", method: :delete, data: { confirm: 'Are you certain you want to delete this?' }%>
                <% end %>
                <% if @sphere.user != current_user %>
                <%= link_to "search", spheres_path,  class: "btn-yellow flex-item" %>
                <%= link_to "book",  new_sphere_booking_path(@sphere), class: "btn-yellow flex-item" %>
                <% end %>
            </div>
          </div>
        </div>

          <br>




          <div class="card" style="box-shadow: 0 0 8px rgba(0,0,0,0.2); border: none; padding: 0px 0px;">
            <div class="card-body" style="text-align: left;">
              <h5 class="card-title">reviews</h5>
              <p class="card-text"></p>
            </div>
            <% if @bookings %>
              <ul class="list-group list-group-flush">
                <% @bookings.each do |booking| %>
                  <% if booking.review %>
                    <li class="list-group-item"><%= booking.review.description %></li>
                  <%else%>
                    <li class="list-group-item"><p>no reviews yet.</p></li>
                  <% end %>
                <% end %>
              </ul>
            <%else%>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">no reviews yet.</li>
              </ul>
            <% end %>

            <div class="card-body">
              <%= link_to 'continue search', spheres_path, class: 'btn btn-light' %>
            </div>
          </div>

         <br>

         <div class="card" style="box-shadow: 0 0 8px rgba(0,0,0,0.2); border: none; padding: 16px;">
            <h5> hosted by:
              <br>
              <img src="<%= @sphere.user.image %>" class="card-sphere-user avatar-bordered" alt="avatar of user" />
              <br>
              <% if @sphere.user == current_user %>
                You
              <% else %>
                <%= link_to @sphere.user.name, user_path(@sphere.user) %>
                <%= link_to 'contact host about this sphere', sphere_chatrooms_path(@sphere), method: :post, class: 'btn btn-light' %>
              <% end %>
            </h5>

            <!-- <a href="mailto:hello@balconia.xyz"><%= @sphere.user.email %></a> -->
         </div>
         <br>

    </div>
 </div>


