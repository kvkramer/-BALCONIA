<div class="page-container">
  <h1> Welcome to <%= @sphere.name %> </h1>

<div class="card-sphere-show">
    <% if @sphere.photo.attached? %>
      <%= cl_image_tag @sphere.photo.key, crop: :fill %>
    <% else %>
      <%= image_tag "spheres/#{rand(1..12)}.jpg" %>
    <% end %>

    <div class="card-sphere-show-infos">
      <div>
        <p> address: <%= @sphere.address %></p>
        <p> description: <%= @sphere.description %></p>
      </div>
        <p> contact owner: <%= @sphere.user.email %></p>
       <p class="card-sphere-show-pricing"> cost per day: <%= @sphere.price %>â‚¬</p>
      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-sphere-user avatar-bordered" />
    </div>
  </div>

  <div class="flex-container">
  <button class="btn btn-outline-secondary flex-item"><%= link_to "Back to all spheres",  spheres_path %></button>
  <button class="btn btn-outline-secondary flex-item"><%= link_to "Book this sphere",  new_sphere_meeting_path(@sphere) %></button>
  <button class="btn btn-outline-secondary flex-item"><%= link_to "Edit this sphere",  edit_sphere_path %></button>
  <button class="btn btn-outline-secondary flex-item"><%= link_to "Delete this sphere", sphere_path(@sphere), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }%></button>
  </div>

</div>
