<div class="edit-banner"> write your review for a past booking </div>
    <div class="container my-4">
        <div class="row">
            <div class="col-12 m-auto">

                <div class="list-group">

                    <%= simple_form_for [@sphere, @booking, @review] do |f| %>
                        <%= f.input :rating, collection: 0..5, label_html: { class: 'lowercase' } %>
                        <%= f.input :description, label_html: { class: 'lowercase' } %>

                        <div class="d-flex justify-content-around">
                        <%= f.submit "create review", class: 'btn-yellow' %>
                        <%= link_to "cancel", bookings_path, class: 'btn-light' %>
                        </div>
                    <% end %>

                </div>
            </div>
        </div>
    </div>